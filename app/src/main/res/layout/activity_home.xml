<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#66E5FB"
    android:gravity="center">

    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome!"
        android:textSize="22sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:paddingBottom="20dp"/>

    <Button
        android:id="@+id/btnFillDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#FDFBEE"
        android:textStyle="bold"
        android:textSize="16dp"
        android:textColor="#0E0E0E"
        android:text="Fill Your Details" />

    <Button
        android:id="@+id/btngotogp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#FDFBEE"
        android:textStyle="bold"
        android:textColor="#191818"
        android:textSize="16dp"
        android:text="Go to Group" />

    <TextView
        android:id="@+id/textq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The best way to find yourself is to lose yourself in the service of others.!"
        android:textSize="22sp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:paddingBottom="20dp"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/down" />

    <Button
        android:id="@+id/btnHelpUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="center_horizontal"
        android:backgroundTint="#2196F3"
        android:textSize="16dp"
        android:text="Help User"
        />
</LinearLayout>
